#!/usr/bin/env bash
# This script displays "To infinity and beyond" and handles SIGTERM signals

# Handle SIGTERM signal
trap 'echo "I am invincible!!!"' TERM

# Main loop
while true; do
    echo "To infinity and beyond"
    # Use a shorter sleep and check for signals more frequently
    for i in {1..4}; do
        sleep 0.5
    done
done
